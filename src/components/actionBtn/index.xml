<view class="container">
    <block wx:for="{{items}}">
        <view class="btn" bindtap="{{item.onClick}}">
            <view class="btn-text">
                {{item.label}}
            </view>
        </view>
        <block wx:if="{{index !== items.length - 1}}">
            <view class="divider"></view>
        </block>
    </block>
    <view class="divider"></view>
    <block wx:if="{{moreItems && moreItems.length > 0}}">
        <text>更多</text>
    </block>
</view>

